<Window x:Class="OutlookDndWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Outlook Drag'n Drop Test" Height="350" Width="538">
    <Grid Margin="0,0,0,-1">
        <Label Content="Subject:&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,194,0,0" VerticalAlignment="Top" Height="28"/>
        <TextBox x:Name="subjectBox" HorizontalAlignment="Left" Height="23" Margin="80,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="427"/>
        <Label Content="EntryID:" HorizontalAlignment="Left" Margin="10,227,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="entryIdBox" HorizontalAlignment="Left" Height="51" Margin="80,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="427"/>
        <Label Content="# Items:" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="countBox" HorizontalAlignment="Left" Height="23" Margin="80,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Data of first item:" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top"/>
        <Rectangle Fill="#7F5873A2" HorizontalAlignment="Left" Height="92" Margin="12,11,0,0" Stroke="Black" VerticalAlignment="Top" Width="495" AllowDrop="True" DragEnter="Rectangle_DragEnter" DragOver="Rectangle_DragOver" Drop="Rectangle_Drop"/>

    </Grid>
</Window>
